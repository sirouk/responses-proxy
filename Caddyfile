# When CADDY_TLS=false, CADDY_PROTOCOL will be "http://"
# When CADDY_TLS=true or unset, CADDY_PROTOCOL will be empty (enables auto-HTTPS)
{$CADDY_PROTOCOL:}{$CADDY_DOMAIN:}:{$CADDY_PORT:443} {
	reverse_proxy openai-responses-proxy:{$HOST_PORT:8282}
}

# Port 80 is only used for ACME challenges when TLS is enabled
# When CADDY_TLS=false, this is ignored and only the main port is used

